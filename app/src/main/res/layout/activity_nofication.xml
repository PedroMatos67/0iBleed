<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TELAS.NoficationActivity">

    <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints">


        <ImageView
                android:id="@+id/imageHome"
                app:srcCompat="@drawable/ic_home_black_24dp"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_weight = "1"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_weight = "1"
                app:srcCompat="@drawable/ic_dashboard_black_24dp"
                android:id="@+id/imagePerfil"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_weight = "1"
                app:srcCompat="@drawable/ic_notifications_black_24dp"
                android:id="@+id/imageNotifications"/>

    </LinearLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="411dp"
                    android:layout_height="101dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="20dp"
                    tools:layout_editor_absoluteY="60dp"
                    tools:layout_editor_absoluteX="0dp" tools:ignore="MissingConstraints"
                    android:background="@color/colorIcons">
        <TextView
                android:id="@+id/textDescription"
                android:layout_marginLeft="10dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Campanha de doação de Sangue"
                android:textSize="20dp"/>
        <TextView
                android:id="@+id/textBloodType"
                android:layout_marginLeft="10dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textDescription"
                android:text="Hospital Aliança"
                android:textSize="20dp"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="278dp"
                android:layout_below="@+id/imageUser"
                android:background="#ececec"/>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>